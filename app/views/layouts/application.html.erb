<!DOCTYPE html>
<html>
<head>
  <title>Blog</title>
  <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Raleway:400,700' %>
  <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Lobster' %>
  <%= stylesheet_link_tag 'application', 'http://fonts.googleapis.com/css?family=Cabin' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-default navbar-fixed-top">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to "BloggAz", root_path, class: "navbar-brand" %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <!-- <ul class="nav navbar-nav">
        <li><h1 class="animated flipInY blog_header navbar-brand">Blog</h1></li>
        <li class="active"><a href="#">All Blog Posts <span class="sr-only">(current)</span></a></li>
      </ul> -->

      <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
          <li><h3>Welcome <%= current_user.full_name %></h3><li>
          <li><%= link_to "New Post", new_post_path %></li>
          <li><%= link_to "Favourites", favourites_path, class: "" %></li>
          <li><%= link_to "Sign Out", destroy_user_session_path, method: :delete, class: "" %></li>
        <% else %>
          <li><%= link_to "Register", new_user_registration_path, class: "" %></li>
          <li><%= link_to "Sign In", new_user_session_path, class: "" %></li>
        <% end %>
      </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<!-- Jumbotron for the search fields and the background picture -->

<div class="jumbotron">
  <div class="container">

    <h1>Blogs have a new home...</h1>

    <div class="search-container col-sm-5 col-offset-md-3">
      <%= form_tag("/", method: "get") do %>
        <p><%#= label_tag(:search, "Search the Blog Posts : ") %></p>
        <p><%= text_field_tag :search, nil, placeholder: "Search blog posts", class: "form-control input-lg search-box" %></p>
        <%= submit_tag "Search Blog Posts", :class => "btn btn-success" %>
      <% end %>
    </div>
  </div>
</div>



<%= yield %>










