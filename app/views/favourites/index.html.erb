<h1>Here are all your favourite posts</h1>

<div class="all_posts">
  <% @favourite_posts.each do |p| %>
    <div class="show_posts">
      <h2><%= link_to p.title, post_path(p) %></h2>
      <p><%= p.created_at.strftime("Created on %B, %d, %Y") %></p>
      <p> Created By: <%= p.user.full_name %></p>
      <%= image_tag p.image.url(:thumb), class: "thumb-image" %>
    </div>
  <% end %>
</div>

<div class="pagination">

<%#= paginate @favourite_posts %>

</div>
