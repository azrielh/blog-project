<% like = @post.likes.find_by_user_id(current_user.id) if user_signed_in? %>
<% if like %>
  <%= link_to fa_icon("thumbs-up 4x"), post_like_path(@post, like), method: :delete, remote: true %>
<% else %>
  <%= link_to fa_icon("thumbs-o-up 4x"), post_likes_path(@post), method: :post, remote: true %>
<% end %>
