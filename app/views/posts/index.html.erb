<hr>
<%= render "form_search" %>
<hr>

<% @posts.each do |p| %>
  <div class="show_posts">
    <h2><%= link_to p.title, post_path(p) %></h2>
    <p><%= p.created_at.strftime("Created on %B, %d, %Y") %></p>
    <p>Created By: <%= p.user.full_name %></p>
  </div>
<% end %>
<!-- kaminari -->
<%= paginate @posts %>
