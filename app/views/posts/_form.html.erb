<%= form_for @post do |p| %>

  <% if @post.errors.any? %>
    <ul>
    <% @post.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
    <% end %>
    </ul>
  <% end %>

  <p>
    <%= p.label :title %>
    <%= p.text_field :title, placeholder: "Add blog title here" %>
  </p>
  <br>
    <p>
      <%= p.label :body %>
      <%= p.text_area :body, placeholder: "What do you want to write" %>
    </p>
  <br>
  <%= p.submit %>
<% end %>
