<div class="container">
  <%= simple_form_for @post do |p| %>
      <%= p.input :title, label: "Blog Title", placeholder: "Add blog title here" %>
      <%= p.input :body, placeholder: "What do you want to write" %>
      <%= p.input :image %>
      <%= p.input :tag_list, placeholder: "Tags (separated by commas)" %>
      <%#= p.collection_check_boxes :category_ids, Category.order("name"), :id, :name %>
      <%= p.button :submit, :class => "btn btn-default" %>
  <% end %>
</div>
