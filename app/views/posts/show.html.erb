<div class="post_content">

<h1 class="title"><%= @post.title %></h1>
<p class="date">Submitted <%= time_ago_in_words(@post.created_at) %> ago</p>
<p class="body"><%= @post.body %></p>

<%= link_to "Edit Post", edit_post_path(@post) %> |
<%= link_to "Delete Post", post_path(@post), method: :delete, data: {confirm: "Are you sure you want to delete this post?"} %>

<%= render "comments/comment" %>

<p>There are <%= @post.comments.count %> Comments</p>

<% @post.comments.each do |c| %>
  <p><%= c.body %></p><br>
  <p>Created : <%= time_ago_in_words(c.created_at) %> ago</p>
  <p>Created by: <%= c.user.full_name %></p>
  <%= link_to "Delete Comment", post_comment_path(@post, c), method: :delete, data: {confirm: "Are you sure you want to delete this comment?"} %>

<% end %>

<!-- What should this paginate???? -->
<%#= paginate @post.comments %>


</div>
