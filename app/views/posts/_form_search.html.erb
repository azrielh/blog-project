<div class="container">
  <div class="form-group col-sm-6">
    <%= form_tag("/", method: "get") do %>
      <p><%= label_tag(:search, "Search the Blog Posts : ") %></p>
      <p><%= text_field_tag :search, nil, placeholder: "Search blog posts", class: "form-control input-lg" %></p>
      <%= submit_tag "Search Blog Posts", :class => "btn btn-success" %>
    <% end %>
  </div>
</div>
